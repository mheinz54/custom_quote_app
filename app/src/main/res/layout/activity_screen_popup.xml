<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScreenEdit"
        android:src="@drawable/ic_action_edit"
        android:contentDescription="go to settings"
        android:onClick="onScreenEdit"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScreenFavorite"
        android:src="@drawable/btn_rating_star_off_focused_holo_light"
        android:contentDescription="add to favorites"
        android:onClick="onScreenFavorite"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScreenShare"
        android:src="@drawable/ic_action_share"
        android:contentDescription="share quote"
        android:onClick="onScreenShare"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScreenNext"
        android:src="@drawable/ic_action_next"
        android:contentDescription="show next quote"
        android:onClick="onScreenNext"/>
</LinearLayout>
